<VirtualHost *:80>
    ServerName {{ sabnzbd_url }}

    ProxyPreserveHost On
    ProxyPass / http://0.0.0.0:{{ sabnzbd_listen_port }}/
    ProxyPassReverse / http://0.0.0.0:{{ sabnzbd_listen_port }}/

    LogFormat "%v:%p %h %l %u %t \"%r\" %>s \"%{Referer}i\" \"%{User-Agent}i\"" log
    CustomLog ${APACHE_LOG_DIR}/sabnzbd.access.log log
    ErrorLog ${APACHE_LOG_DIR}/sabnzbd.error.log

</VirtualHost>