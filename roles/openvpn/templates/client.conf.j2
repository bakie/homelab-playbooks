client
dev tun
remote {{ openvpn_remote }} {{ openvpn_remote_port }}
resolv-retry infinite
nobind
persist-key
persist-tun
auth-nocache
route-delay 5
verb 3
explicit-exit-notify 5
push-peer-info
setenv UV_IPV6 yes
remote-cert-tls server
cipher AES-256-CBC
comp-lzo no
proto udp
key-direction 1
<ca>
{{ openvpn_ca }}
</ca>
<cert>
{{ openvpn_cert }}
</cert>
<key>
{{ openvpn_key }}
</key>
<tls-auth>
{{ openvpn_tls_auth }}
</tls-auth>
