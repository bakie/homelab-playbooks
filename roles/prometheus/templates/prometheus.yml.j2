#jinja2: trim_blocks: True, lstrip_blocks: True

global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s

rule_files:
  - {{ prometheus_config_path }}/rules/*.rules

scrape_configs:
  - job_name: "metrics"
    metrics_path: "/metrics"
    static_configs:
      - targets:
          - prometheus.local:9100
    relabel_configs:
      - source_labels: [__address__]
        regex: "(.*)\\.(.*)"
        target_label: instance
